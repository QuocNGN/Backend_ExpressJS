<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete A User</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/create">Create Users</a>
    </div>

    <form class="form" action="/delete-user" method="post">
        <!-- <%= JSON.stringify(userEdit) %> -->
        <fieldset>
            <legend><b>Delete a user</b></legend>
            <div class="input-group d-none">
                <label>Id: </label>
                <input type="text" name="userId" value="<%= userEdit.id %>">
            </div>
            <div class="input-group">
                <label>Are you sure to delete this user with Email: </label>
                <input type="text" name="email" value="<%= userEdit.email %>" disabled>
            </div>
            <div class="btn">
                <button>Confirm</button>
                <a href="/" class="btn-back">Cancel</a>
            </div>
        </fieldset>
    </form>
</body>

</html>